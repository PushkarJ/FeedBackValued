<%= form_for(@feedback, remote: true) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field" id=customer_id>
      <%= f.label :customer %><br />
      <%= f.collection_select :customer_id, Customer.all, :id, :name,
                               :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :feedback %><br />
    <%= f.text_area :feed, :class => "input-xxlarge", :placeholder => 'Give your feedback here.' %>
  </div>
    <div class="field">
      <input type ="checkbox" id ="Anonymous" name="Remain Anonymous" onclick="makeAnonymous()">&nbsp;&nbsp;&nbsp;Remain Anonymous<br/>
    </div>
    <br/>
  <div class="field" id="name">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field" id="email">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field" id="contactno">
    <%= f.label :contactno %><br />
    <%= f.text_field :contactno %>
  </div>
  <div class="actions">
    <%= f.submit "Submit and Give more feedback", class:"btn btn-medium",
                 data: {confirm: 'Press \'ok\' to submit your feedback. You can continue giving more feedback or click \'View feedbacks\' to view all feedbacks!'}%>
  </div>
 <% end %>
