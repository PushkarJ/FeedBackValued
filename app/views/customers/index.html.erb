<h1>Listing customers</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td ><%= customer.name %></td>
    <td>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'See feedback', customer %></td>
    <td hidden="true"><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td hidden="true"><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

